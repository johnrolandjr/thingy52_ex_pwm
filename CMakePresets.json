{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20
    },
    "configurePresets": [
        {
            "name": "build_thingy",
            "displayName": "Build for Thingy52 NRF52832",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build_thingy",
            "cacheVariables": {
                "NCS_TOOLCHAIN_VERSION": "NONE",
                "BOARD": "thingy52_nrf52832",
                "BOARD_ROOT": "${sourceDir}/",
                "CONFIG_DEBUG_OPTIMIZATIONS": "y",
                "CONFIG_DEBUG_THREAD_INFO": "y",
                "CONF_FILE": "${sourceDir}/prj.conf",
                "OVERLAY_CONFIG": "",
                "DTC_OVERLAY_FILE": "${sourceDir}/thingy52_nrf52832.overlay",
                "SHIELD": ""
            }
        }
    ]
}